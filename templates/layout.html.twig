{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">

        <nav id="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <h4>KNOWLEDGE</h4>
            </div>

            <!-- Sidebar Links -->
            <ul class="list-unstyled components">
                <li><a href="{{ path('symfony') }}">SYMFONY</a></li>
                <li><a href="{{ path('creating-web') }}">CREATING-WEB</a></li>
            </ul>
        </nav>

        <div id="content">
            <nav class="navbar navbar-dark portfolio-navbar">

                <button type="button" id="sidebarCollapse" class="navbar-btn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <div>
                    <a class="navbar-header" href="{{ path('home') }}"><h2>PORTFOLIO</h2></a>
                </div>

            </nav>

            <div id="columns-container" class="col-12">
                <div class="section col-12">
                    <h5>{% block section %}{% endblock %}</h5>
                </div>

                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $(this).toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>
{% endblock %}