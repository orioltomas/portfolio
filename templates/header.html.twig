{% block header %}

    {% if app.request.getLocale() is same as('ca') %}
        {% set languageSwitchLink = path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) %}
    {% else %}
        {% set languageSwitchLink = path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'ca'})) %}
    {% endif %}

    <header>
        <nav id="sidebar">

            <ul class="list-unstyled components">
                <li><a href="{{ path('home') }}">{{ 'menu.home' | trans }}</a></li>
                <li><a href="{{ path('portfolio') }}">{{ 'menu.portfolio' | trans }}</a></li>
                <li><a href="{{ path('experience') }}">{{ 'menu.experience' | trans }}</a></li>
                {% if app.request.getLocale() is same as('ca') %}
                    <li><a href="{{ languageSwitchLink }}">EN</a></li>
                {% else %}
                    <li><a href="{{ languageSwitchLink }}">CA</a></li>
                {% endif %}
            </ul>
        </nav>

        <div class="navbar-menu">
            <div class="col-12">
                <div class="row">
                    <div class="col-9 pl-0 pr-0 align-middle header-col-left{{ app.request.attributes.get('_route') is same as('home') ? ' home' : '' }}">
                        <h1>Oriol Tom√†s Fortuny</h1>
                    </div>
                    <div class="col-3 pl-0 pr-0 align-middle header-col-right">
                        <ul class="list-unstyled flex right-menu">
                            {% if (app.request.attributes.get('_route') != 'home') %}
                                <li><a href="{{ path('home') }}">{{ 'menu.home' | trans }}</a></li>
                                <li><a href="{{ path('portfolio') }}">{{ 'menu.portfolio' | trans }}</a></li>
                                <li><a href="{{ path('experience') }}">{{ 'menu.experience' | trans }}</a></li>
                            {% endif %}
                            {% if app.request.getLocale() is same as('ca') %}
                                <li><a href="{{ languageSwitchLink }}">EN</a></li>
                            {% else %}
                                <li><a href="{{ languageSwitchLink }}">CA</a></li>
                            {% endif %}
                        </ul>
                        <button type="button" id="sidebarCollapse" class="navbar-btn">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </header>

{% endblock %}